#include "Control_RC_Car.h"

uint16_t counter = 0;

void control_RC_Car() {
	while(auto_manual) {
		// Check Front HC-SR04
		if(distance[0] >= 20) control_motor(1, 80, 80);
		else {
			if(distance[1] > distance[2]) {
				if(distance[1] < 10) control_motor(2, 40, 70);
				else {
					control_motor(3, 50, 50);
					HAL_Delay(500);
				}

				HAL_Delay(1000);
			}else {
				if(distance[2] < 10) control_motor(2, 70, 40);
				else {
					control_motor(4, 50, 50);
					HAL_Delay(500);
				}
			}
		}
	}
}

