#include "Control_RC_Car.h"

uint16_t counter = 0;

void control_RC_Car() {
	while(auto_manual) {
		// Check Front HC-SR04
		if(distance[0] <= 200 && distance[1] <= 200 && distance[2] <= 200) {
			if(distance[0] >= 25 && distance[1] >= 25 && distance[2] >= 15) control_motor(1, 80, 80);
			else {
				if(distance[1] > distance[2]) {
					if(distance[1] < 20) {
						control_motor(3, 50, 50);
						HAL_Delay(800);
					}else {
						control_motor(3, 50, 50);
						HAL_Delay(150);
					}
				}else {
					if(distnace[2] < 20) {
						control_motor(4, 50, 50);
						HAL_Delay(800);
					}else {
						control_motor(4, 50, 50);
						HAL_Delay(150);
					}

				}
			}
		}
	}
}

